<div class="container">
  <div class="contents">
    <div class="article">
<h4>以下の内容で送信</h4>
<br>

<%= form_with(model: @beach, url: beaches_path, local: true) do |form| %>
  <%= form.hidden_field :name %> 
  <%= form.hidden_field :address %>
  <%= form.hidden_field :image %>
  <%= form.hidden_field :information %>

<div>
<%= image_tag(@beach.image.url) %>
<%= hidden_field_tag :"cache[image]",@beach.image.cache_name%>
<%= form.hidden_field :id %>
</div>

<p><strong>Name: </strong><%= @beach.name%></p>
<p><strong>Address: </strong><%= @beach.address%></p> 

<div class="row">
<div><strong>Information</strong></div>
<div class="col-xs-12 col-sm-12 col-md-4"></div><!--ダミーcol--!>
<div class="col-xs-12 col-sm-12 col-md-4"><p class="information"><%= @beach.information%></div>
<div class="col-xs-12 col-sm-12 col-md-4"></div><!--ダミーcol--!>
</div>

</div><!--article締め--!>
<div id="submit_btn">
<%= form.submit "Submit Post", :class=>"btn btn-primary btn-sm"%>
</div>
<% end %>

<%= form_with(model: @beach, url: new_beach_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :name %> 
  <%= form.hidden_field :address %>
  <%= form.hidden_field :image %>
  <%= form.hidden_field :information %>
  
  <%= form.submit "Go Back to Previous Page", name: 'back', :class=>"btn btn-primary btn-sm" %>
<% end %>

 </div>
</div>